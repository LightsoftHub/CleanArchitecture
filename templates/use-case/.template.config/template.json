{
  "$schema": "http://json.schemastore.org/template",
  "author": "minhvu",
  "classifications": [ "AspNetCore", "API" ],
  "name": "Clean Architecture Use Case",
  "description":  "Create a new use case (query or command)",
  "identity": "Clean.Architecture.UseCase.CSharp",
  "groupIdentity": "Clean.Architecture.UseCase",
  "shortName": "usecase",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "sourceName": "UseCase",
  "preferNameDirectory": false,
  "symbols": {
    "DefaultNamespace": {
      "type": "bind",
      "binding": "msbuild:RootNamespace",
      "replaces": "CleanArch.Application",
      "defaultValue": "CleanArch.Application"
    },
    "featureName": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "replaces": "FeatureName",
      "fileRename": "FeatureName"
    },
    "useCaseType": {
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "choices": [
        {
          "choice": "command",
          "description": "Create a new command"
        },
        {
          "choice": "query",
          "description": "Create a new query"
        }
      ],
      "description": "The type of use case to create"
    },
    "createCommand": {
      "type": "computed",
      "value": "(useCaseType == \"command\")"
    },
    "createQuery": {
      "type": "computed",
      "value": "(useCaseType == \"query\")"
    },
    "returnType": {
      "type": "parameter",
      "datatype": "string",
      "isRequired": false,
      "replaces": "object",
      "defaultValue": "object"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(createCommand)",
          "exclude": [ "Queries/**/*" ]
        },
        {
          "condition": "(createQuery)",
          "exclude": [ "Commands/**/*" ]
        }
      ]
    }
  ]
}